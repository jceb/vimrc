#!/bin/sh
cd $(dirname "$0")

register_file() {
	file="$1"
	[ -z "$file" ] && echo "No file name supplied" && return
	[ -h "$HOME/$file" ] && rm "$HOME/$file"
	if [ "$file" = ".vim" ]; then
		[ ! -e "$HOME/$file" ] && ln -s "$PWD" "$HOME/$file"
	elif [ "$file" = ".vimrc" ]; then
		[ ! -e "$HOME/$file" ] && ln -s "$PWD/vimrc" "$HOME/$file"
	else
		[ ! -e "$HOME/$file" ] && ln -s "$PWD/$file" "$HOME/$file"
	fi
}

for i in .vim .vimrc .vimoutliner .vimoutlinerrc; do
	register_file $i
done
