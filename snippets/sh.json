{
  "Template": {
    "prefix": "template",
    "body": ["#!/usr/bin/env bash", "set -ueo pipefail"]
  },
  "Template envrc": {
    "prefix": "template-envrc",
    "body": [
      "# Documentation: https://direnv.net/man/direnv-stdlib.1.html",
      "source_up_if_exists",
      "dotenv_if_exists",
      "dotenv_if_exists .env.local",
      "",
      "if has nix; then",
      "  if test -e .flake/flake.nix; then",
      "    use flake .flake",
      "  elif test -e flake.nix; then",
      "      use flake",
      "  fi",
      "fi",
      "",
      "PATH_add .bin"
    ]
  },
  "Help": {
    "prefix": "help",
    "body": [
      "USAGE=\"$$(basename \"$$0\") $$1\"",
      "",
      "if [ $$# -ge 1 ] && ([ \"$$1\" = \"-h\" ] || [ \"$$1\" = \"--help\" ]); then",
      "echo \"$${USAGE}\"",
      "exit 0",
      "fi"
    ]
  },
  "Variable": {
    "prefix": "v",
    "body": ["\"$${$${1:variable}}\""]
  },
  "Variable without quotes": {
    "prefix": "vv",
    "body": ["$${${1:variable}}"]
  },
  "Command": {
    "prefix": "c",
    "body": ["\"$$(${1:command})\""]
  },
  "Command without quotes": {
    "prefix": "cc",
    "body": ["$$(${1:command})"]
  }
}
